    <!-- ============= Home Section =============== -->
    <section class="home">
        <div class="nav">
            <div class="toggle-sidebar">
                <i class='bx bx-menu'></i>
            </div>
            <nav>
                <div class="nav-content">
                    <div class="profile-details">
                        <img src="../img/chef.png" alt="" class="profile-image">
                        <span class="user-id">ID1234</span>
                    </div>
                    <a href="/login" class="auth-link">เข้าสู่ระบบ</a>
                </div>
            </nav>
        </div>

        <!-- ============= Top Dashboard =============== -->

        <div class="breadcrumbs">
            <a href="/dashboard"> หน้าหลัก</a> > <span>ดูข้อมูลรายการจัดซื้อ</span>
        </div>
        <div class="topic"><a href="javascript:history.back()" style="text-decoration: none;">
                <i class='bx bx-left-arrow-alt'></i></a> ดูข้อมูลรายการจัดซื้อ
        </div>

        <!-- ============= Center Dashboard =============== -->

        <div class="centered-content">
            <div class="form-container">
                <div class="form-group">
                    <h2>รายการจัดซื้อ</h2>
                    <hr class="underline">
                    <div class="form-container">
                        <div class="form-group">
                            <label for="id_buying_list">รหัสสินค้า</label>
                            <input type="text" id="id_buying_list" name="id_buying_list"
                                value="<%= buying.id_buying_list %>" required aria-label="รหัสสินค้า" readonly>
                        </div>
                        <div class="form-group">
                            <label for="name_product">ชื่อสินค้า</label>
                            <input type="text" id="name_product" name="name_product" value="<%= buying.name_product %>"
                                required readonly> <!-- Added readonly here -->
                        </div>
                        <div class="form-group">
                            <label for="date_of_receipt">วันที่รับสินค้า</label>
                            <input type="date" id="date_of_receipt" name="date_of_receipt"
                                value="<%= buying.date_of_receipt %>" required readonly>
                        </div>
                        <div class="form-group">
                            <label for="setting_type_id">ประเภทสินค้า</label>
                            <select id="setting_type_id" name="setting_type_id" required aria-label="ประเภทสินค้า"
                                disabled>
                                <!-- Added disabled here -->
                                <option value="" disabled>กรุณาเลือกประเภทสินค้า</option>
                                <% settingTypes.forEach(function(type) { %>
                                    <option value="<%= type.id_type %>" <%=selectedSettingType===type.id_type
                                        ? 'selected' : '' %>><%= type.id_type %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-row grouped-fields-container">
                            <div class="form-group col-md-12">
                                <label for="unit_quantity">ปริมาณและหน่วยสินค้า</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="unit_quantity" name="unit_quantity"
                                        value="<%= buying.unit_quantity %>" placeholder="กรอกปริมาณ" required readonly>
                                    <!-- Added readonly here -->
                                    <select id="setting_unit_id" name="setting_unit_id" class="custom-select" required
                                        aria-label="หน่วยสินค้า" disabled> <!-- Added disabled here -->
                                        <option value="" disabled>เลือกหน่วย</option>
                                        <% settingUnits.forEach(function(unit) { %>
                                            <option value="<%= unit.id_unit %>" <%=selectedSettingUnit===unit.id_unit
                                                ? 'selected' : '' %>><%= unit.id_unit %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="price">ราคา</label>
                            <input type="number" id="price" name="price" value="<%= buying.price %>" required readonly>
                            <!-- Added readonly here -->
                        </div>

                        <div class="form-group">
                            <label>เวลา (วัน:ชั่วโมง:นาที:วินาที):</label>
                            <li class="timeCounter" data-id="<%= buying.id_buying_list %>">
                                <span class="day">
                                    <%=buying.day%>
                                </span>d :

                                <span class="hour">
                                    <%=buying.hour%>
                                </span>h :

                                <span class="minute">
                                    <%=buying.minute%>
                                </span>m :

                                <span class="second">
                                    <%=buying.second%>
                                </span>s
                            </li>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

