        <!-- ============= Top Dashboard =============== -->

        <div class="breadcrumbs">
            <a href="/dashboard"> หน้าหลัก</a> > <span>ดูข้อมูลคลังสินค้า</span>
        </div>
        <div class="topic"><a href="javascript:history.back()" style="text-decoration: none;">
                <i class='bx bx-left-arrow-alt'></i></a> ดูข้อมูลคลังสินค้า</div>

        <div class="topic">ดูข้อมูลคลังสินค้า</div>

        <!-- ============= Center Dashboard =============== -->


        <div class="centered-content">
            <div class="form-container">
                <div class="form-group">
                    <h2>ข้อมูลคลังสินค้า</h2>
                    <hr class="underline">
                    <div class="form-container">
                        <form action="/update_warehouse" method="POST">
                            <div class="form-group">
                                <label for="id_warehouse">รหัสรายการ</label>
                                <input type="text" id="id_warehouse" name="id_warehouse" value="<%= warehouse.id_warehouse %>" readonly>
                            </div>
                            <div class="form-group">
                                <label for="name_product">ชื่อสินค้า</label>
                                <input type="text" id="name_product" name="name_product" value="<%= warehouse.name_product %>" readonly>
                            </div>
                            <!-- Assuming you have a way to determine the selected option for product type -->
                            <div class="form-group">
                                <label for="setting_type_id">ประเภทสินค้า</label>
                                <input type="text" id="setting_type_id" name="setting_type_id" value="<%= warehouse.setting_type_id %>" readonly>
                            </div>
                            <div class="form-group">
                                <label for="unit_quantity_all">ปริมาณสินค้าที่มี</label>
                                <input type="number" id="unit_quantity_all" name="unit_quantity_all" value="<%= warehouse.unit_quantity_all %>" readonly>
                            </div>

                            <div class="form-group">
                                <label for="unit_quantity_max">ปริมาณที่ต้องการขายต่อวัน</label>
                                <input type="number" id="unit_quantity_max" name="unit_quantity_max" value="<%= warehouse.unit_quantity_max %>" >
                            </div>

                            <div class="form-group">
                                <label for="setting_unit_id">หน่วย</label>
                                <input type="text" id="setting_unit_id" name="setting_unit_id" value="<%= warehouse.setting_unit_id %>" readonly>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="submit-button">อัพเดทข้อมูล</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
