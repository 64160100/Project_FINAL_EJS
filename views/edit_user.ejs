    <!-- ============= Home Section =============== -->
    <section class="home">
        <div class="nav">
            <div class="toggle-sidebar">
                <i class='bx bx-menu'></i>
            </div>
            <nav>
                <div class="nav-content">
                    <div class="profile-details">
                        <% if (user) { %>
                            <img src="../img/chef.png" alt="" class="profile-image">
                            <span class="user-id">ID: <%= user.tbl_employees %></span>
                        </div>
                        <a href="/logout" class="auth-link">Logout</a>
                        <% } else { %>
                            <a href="/login" class="auth-link">เข้าสู่ระบบ</a>
                        <% } %>
                </div>
            </nav>
        </div>

        <!-- ============= Top Dashboard =============== -->

        <div class="breadcrumbs">
            <a href="/user">ผู้ใช้งาน</a> > <span>จัดการสิทธิ์ผู้ใช้งาน</span>
        </div>
        <div class="topic"><a href="javascript:history.back()" style="text-decoration: none;">
                    <i class='bx bx-left-arrow-alt'></i></a> จัดการสิทธิ์ผู้ใช้งาน</div>

        <!-- ============= Center Dashboard =============== -->

        <div class="centered-content">
            <form action="/create_user/<%= User.id %>" method="POST">
                <div class="form-container">
                    <div class="form-group">
                        <h2>ข้อมูลผู้ใช้งาน</h2>
                        <hr class="underline">
                        <div class="form-container">
                            <label for="employee_id">รหัสพนักงาน</label>
                            <input type="employee_id" id="employee_id" name="employee_id" value="<%= User.id %>"
                                required aria-label="รหัสพนักงาน" disabled>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="full_name">ชื่อพนักงาน</label>
                                <input type="text" id="full_name" name="full_name" value="<%= User.name %>" required
                                    aria-label="รหัสพนักงาน" disabled>
                            </div>

                            <div class="form-group">
                                <label for="username">ผู้ใช้งาน</label>
                                <input type="text" id="username" name="username" value="<%= User.username %>" required aria-label="username">
                                <input type="hidden" id="original_username" name="original_username" value="<%= User.username %>">
                                <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                                    <div class="error-message"><%= errorMessage %></div>
                                <% } %>
                            </div>

                            <div class="form-group">
                                <label for="Password">รหัสผ่าน</label>
                                <input type="text" id="Password" name="Password"
                                    value="<%= user.password && user.password !== '--' ? '******' : '' %>" required
                                    aria-label="password" disabled>
                                <div>
                                    <a href="/add_user_password/<%= User.id %>"
                                        style="color: red; text-decoration: underline;">สร้างรหัสพนักงาน</a>
                                </div>
                            </div>
                        </div>

                        <div class="form-row"> <!-- Adjusted for single row -->
                            <div class="form-group">
                                <label for="user_role">ชื่อสิทธิ์ผู้ใช้งาน</label>
                                <select id="permission" name="permission" required aria-label="ชื่อสิทธิ์ผู้ใช้งาน">
                                    <option value="" disabled <%= !User.userPermission ? 'selected' : '' %>>กรุณาเลือกสิทธิ์ผู้ใช้งาน</option>
                                    <% Permissions.forEach(function(permission) { %>
                                        <option value="<%= permission.permission_id %>" <%= User.userPermission === permission.permission_id ? 'selected' : '' %>>
                                            <%= permission.permission_name %> 
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label>สถานะการใช้งาน</label>
                                <% 
                                let missingFields = [];
                                if (!User.userPermission) missingFields.push('สิทธิ์ผู้ใช้');
                                if (!User.username) missingFields.push('ชื่อผู้ใช้');
                                if (!User.password || User.password === '--') missingFields.push('รหัสผ่าน');
                            
                                let isReady = missingFields.length === 0;
                                let statusText = isReady ? 'พร้อมใช้งาน' : 'ไม่พร้อมใช้งาน';
                                let statusClass = isReady ? 'status-ready' : 'status-not-ready';
                                %>
                                <div class="status-display <%= statusClass %>"><%= statusText %></div>
                                <input type="hidden" name="status" value="<%= isReady ? 'ON' : 'OFF' %>">
                                <% if (!isReady) { %>
                                    <div class="error-message">
                                        ขาดข้อมูล: <%= missingFields.join(', ') %>
                                    </div>
                                <% } %>
                            </div>

                        </div>
                    </div>
                    <button type="submit">บันทึกการเปลี่ยนแปลง</button>
                </div>
            </form>
        </div>

    </section>

    <!-- Link JS -->
    <script src="../js/index.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const statusDisplay = document.getElementById('statusDisplay');
            const statusInput = document.getElementById('statusInput');
            const userId = '<%= User.id %>'; // ใส่ ID ของผู้ใช้ที่กำลังแก้ไข
        
            function updateStatus(isReady) {
                const status = isReady ? 'ON' : 'OFF';
                statusInput.value = status;
                statusDisplay.textContent = isReady ? 'พร้อมใช้งาน' : 'ไม่พร้อมใช้งาน';
                statusDisplay.className = `status-display ${isReady ? 'status-ready' : 'status-not-ready'}`;
        
                // ส่งข้อมูลไปยัง backend
                fetch('/update-user-status', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ userId: userId, status: status }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('Status updated successfully');
                    } else {
                        console.error('Failed to update status');
                    }
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
            }
        
            // เพิ่ม event listeners สำหรับการเปลี่ยนแปลงที่อาจส่งผลต่อสถานะ
            document.getElementById('permission').addEventListener('change', checkReadyStatus);
            document.getElementById('username').addEventListener('input', checkReadyStatus);
        
            function checkReadyStatus() {
                const permission = document.getElementById('permission').value;
                const username = document.getElementById('username').value;
                const password = '<%= User.password %>'; // ใช้ค่าจาก server
        
                const isReady = permission && username && password && password !== '--';
                updateStatus(isReady);
            }
        });
        </script>
</body>

</html>