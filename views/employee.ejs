        <!-- ============= Center Dashboard =============== -->

        <div class="centered-content">
            <div class="employee-container">
                <div class="employee-header">
                    <ul class="employee-details">
                        <li class="id-employee">รหัสพนักงาน</li>
                        <li class="name-employee">ชื่อ-สกุล</li>
                        <% if (permissions.employee.employee_view==='Y' || permissions.employee.employee_delete==='Y' )
                            { %>
                            <li class="action-employee">จัดการ</li>
                            <% } %>
                    </ul>
                </div>
                <hr class="underline">
                <div id="employeeList">
                    <% employees.forEach(function(employee) { %>
                        <div class="employee-content">
                            <ul class="employee-detail">
                                <li class="employee-id">
                                    <%= employee.id %>
                                </li>
                                <li class="employee-name">
                                    <%= employee.name %>
                                </li>
                                <% if (permissions.employee.employee_view==='Y' ||
                                    permissions.employee.employee_delete==='Y' ) { %>
                                    <li class="employee-action">
                                        <% if (permissions.employee.employee_view==='Y' ) { %>
                                            <button onclick="location.href='/view_employee/<%= employee.id %>'"
                                                class="view-button">ดูข้อมูล</button>
                                            <% } %>
