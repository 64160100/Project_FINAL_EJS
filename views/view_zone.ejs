                    <!-- submenu links here  -->
                </div>
            </li>
        </ul>
    </div>

    <!-- ============= Home Section =============== -->
    <section class="home">
        <div class="nav">
            <div class="toggle-sidebar">
                <i class='bx bx-menu'></i>
            </div>
            <nav>
                <div class="nav-content">
                    <div class="profile-details">
                        <img src="../img/chef.png" alt="" class="profile-image">
                        <span class="user-id">ID1234</span>
                    </div>
                    <a href="/login" class="auth-link">เข้าสู่ระบบ</a>
                </div>
            </nav>
        </div>

        <!-- ============= Top Dashboard =============== -->

        <div class="topic"> จัดโต๊ะอาหาร </div>

        <!-- ============= Center Dashboard =============== -->

        <div class="centered-content">
            <div class="zone-controls">
                <% zones.forEach(function(zone) { %>
                    <a href="/view_zone/<%= zone.zone_name %>">
                        <button class="zone-name-btn" data-zone-id="<%= zone.zone_name %>">Zone: <%= zone.zone_name %></button>
                    </a>
                <% }); %>
                <a href="/add_table" class="add-zone-btn">Add Zone</a>
            </div>
            <% if (tables.length > 0) { %>
                <div class="table-container">
                    <% tables.forEach(function(table) { %>
                        <a href="/table/zone/<%= table.id_table %>" class="table-link">
                            <div class="table-box">
                                <p>Table ID: <%= table.id_table %></p>
                                <!-- Add more table details as needed -->
                            </div>
                        </a>
                    <% }); %>
                </div>
            <% } else { %>
                <p>No tables found in this zone.</p>
            <% } %>
        </div>

    </section>
    <!-- Link JS -->
    <script src="../js/index.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const zoneButtons = document.querySelectorAll('.zone-name-btn');

            zoneButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const zoneId = this.getAttribute('data-zone-id');
                    window.location.href = `/view_zone/${zoneId}`;
                });
            });
        });
    </script>
</body>

</html>