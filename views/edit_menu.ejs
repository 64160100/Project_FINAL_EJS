        <!-- ============= Center Dashboard =============== -->

        <div class="centered-content">
            <div class="form-container">
                <form action="/update_menu/<%= menu && menu.id_menu ? menu.id_menu : '' %>" method="post" id="menuForm"
                    enctype="multipart/form-data">
                    <!-- Hidden input for method override if needed -->
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <h2>ข้อมูลเมนูอาหาร</h2>
                        <hr class="underline">
                        <div class="flex-container">
                            <!-- Container for specified fields -->
                            <div class="fields-container">
                                <!-- Row 1: ชื่อสินค้า -->
                                <div class="form-row">
                                    <div class="form-container">
                                        <label for="name_product">ชื่อสินค้า</label>
                                        <input type="text" id="name_product" name="name_product" required
                                            aria-label="ชื่อสินค้า"
                                            value="<%= menu && menu.name_product ? menu.name_product : '' %>">
                                    </div>
                                </div>
                                <!-- Row 2: รหัสสินค้า, ประเภทสินค้า -->
                                <div class="form-row">
                                    <div class="form-container">
                                        <label for="id_menu">รหัสสินค้า</label>
                                        <input type="text" id="id_menu" name="id_menu" required aria-label="รหัสสินค้า"
                                            value="<%= menu && menu.id_menu ? menu.id_menu : '' %>">
                                    </div>
                                    <div class="form-container">
                                        <label for="settingType">ประเภทสินค้า</label>
                                        <select id="settingType" name="settingType">
                                            <% settingType.forEach(type=> { %>
                                                <option value="<%= type.menu_type %>" <%=menu &&
                                                    type.menu_type===menu.settingType ? 'selected' : '' %>>
                                                    <%= type.menu_type %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                    <div class="form-container">
                                        <label for="settingCategory">หมวดหมู่สินค้า</label>
                                        <select id="settingCategory" name="settingCategory">
                                            <% settingCategory.forEach(category=> { %>
                                                <option value="<%= category.menu_category %>" <%=menu &&
                                                    category.menu_category===menu.settingCategory ? 'selected' : '' %>>
                                                    <%= category.menu_category %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                </div>
                                <!-- Row 3: ราคา, หน่วยการใช้, สถานะ -->
                                <div class="form-row">
                                    <div class="form-container">
                                        <label for="price">ราคา</label>
                                        <input type="number" id="price" name="price" required aria-label="ราคา"
                                            value="<%= menu && menu.price ? menu.price : '' %>">
                                    </div>
                                    <div class="form-container">
                                        <label for="settingUnit">หน่วยสินค้า</label>
                                        <select id="settingUnit" name="settingUnit">
                                            <% settingUnit.forEach(unit=> { %>
                                                <option value="<%= unit.menu_unit %>" <%=menu &&
                                                    unit.menu_unit===menu.settingUnit ? 'selected' : '' %>>
                                                    <%= unit.menu_unit %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                    <div class="form-container">
                                        <label for="status">สถานะ</label>
                                        <select id="status" name="status" class="custom-select" required
                                            aria-label="สถานะ">
                                            <option value="" disabled <%=!menu || !menu.status ? 'selected' : '' %>
                                                >เลือกสถานะ</option>
                                            <option value="1" <%=menu && menu.status===1 ? 'selected' : '' %>>เปิดใช้งาน
                                            </option>
                                            <option value="0" <%=menu && menu.status===0 ? 'selected' : '' %>>ปิดใช้งาน
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!-- Image Upload -->
                            <div class="form-image-upload">
                                <label for="menu_image" id="label_menu_image">รูปภาพสินค้า</label>
                                <div id="drop_zone" ondrop="dropHandler(event);" ondragover="dragOverHandler(event);">
                                    <i class='bx bxs-arrow-to-bottom'></i>
                                    <span>เลือกรูปภาพของคุณ</span>
                                </div>
                                <!-- Hidden file input -->
                                <input type="file" id="menu_image" name="menu_image" aria-label="รูปภาพสินค้า"
                                    onchange="showImage(this)" style="display: none;"
                                    accept="image/png, image/jpeg, image/gif">
                                <!-- Custom button that triggers the file input -->
                                <div id="image_container" style="position: relative;">
                                    <img id="preview" src="<%= menu && menu.menu_picture ? menu.menu_picture : '' %>"
                                        alt="Menu Image">
                                    <button type="button" id="delete_image" onclick="deleteImage()"> X </button>
                                </div>
                            </div>
