    <!-- ============= Home Section =============== -->
    <section class="home">
        <div class="nav">
            <div class="toggle-sidebar">
                <i class='bx bx-menu'></i>
            </div>
            <nav>
                <div class="nav-content">
                    <div class="profile-details">
                        <% if (user) { %>
                            <img src="../img/chef.png" alt="" class="profile-image">
                            <span class="user-id">ID: <%= user.tbl_employees %></span>
                        </div>
                        <a href="/logout" class="auth-link">Logout</a>
                        <% } else { %>
                            <a href="/login" class="auth-link">เข้าสู่ระบบ</a>
                        <% } %>
                </div>
            </nav>
        </div>

        <!-- ============= Top Dashboard =============== -->

        <div class="topic">
            รายการจัดซื้อ
            <div class="search-add-container">
                <% if (permissions.buying.buying_view === 'Y') { %>
                <label for="showZeroQuantity">
                    <input type="checkbox" id="showZeroQuantity" /> แสดงวัตถุดิบหมด
                </label>
                <label for="showDuplicates">
                    <input type="checkbox" id="showDuplicates" /> แสดงวัตถุดิบซ้ำ
                </label>
                <% } %>
                <input type="text" id="searchBox" placeholder="ค้นหาสิทธิ์ผู้ใช้งาน..." />
                <% if (permissions.buying.buying_create === 'Y') { %>
                <button onclick="window.location.href='/add_buying'" class="add-buying-button">รับเข้าสินค้า</button>
                <% } %>
            </div>
        </div>

        <!-- ============= Center Dashboard =============== -->

        <div class="centered-content">
            <div class="buying-container">
                <div class="buying-header">
                    <ul class="buying-details">
                        <li>รหัสสินค้า</li>
                        <li>ชื่อสินค้า</li>
                        <li>วันที่รับเข้า</li>
                        <li>ประเภทสินค้า</li>
                        <li>หน่วยสินค้า</li>
                        <li>ราคา</li>
                        <li>เวลารับเข้า</li>
                        <% if (permissions.buying.buying_view === 'Y' || permissions.buying.buying_delete === 'Y') { %>
                            <li>จัดการ</li>
                        <% } %>
                    </ul>
                </div>
                <hr class="underline">
                <% buying.forEach(function(buying) { %>
                    <div class="buying-item">
                        <ul class="buying-detail">
                            <li>
                                <%= buying.id_buying_list %>
                            </li>
                            <li class="product-name">
                                <%= buying.name_product %>
                            </li>
                            <li>
                                <%= new Date(buying.date_of_receipt).toLocaleDateString() %>
                            </li>
                            <li>
                                <%= buying.setting_type_id %>
                            </li>
                            <li>
                                <%= buying.unit_quantity %>
                                <%= buying.setting_unit_id %>
                            </li>
                            <li>
                                <%= buying.price %>
                            </li>
                            <li class="timeCounter" data-id="<%= buying.id_buying_list %>">
                                <span class="day">
                                    <%= buying.day %>
                                </span>d
                                <span class="hour">
                                    <%= buying.hour %>
                                </span>h
                                <span class="minute">
                                    <%= buying.minute %>
                                </span>m
                                <span class="second">
                                    <%= buying.second %>
                                </span>s
                            </li>
                            <% if (permissions.buying.buying_view === 'Y' || permissions.buying.buying_delete === 'Y') { %>
                                <li class="buying-action">
                                    <% if (permissions.buying.buying_view === 'Y') { %>
                                        <button onclick="location.href='/view_buying/<%= buying.id_buying_list %>'" class="view-button">ดูข้อมูล</button>
                                    <% } %>
                                    <% if (permissions.buying.buying_delete === 'Y') { %>
                                        <form action="/delete_buying/<%= buying.id_buying_list %>" method="post" style="display: inline;">
                                            <input type="hidden" name="unit_quantity" value="<%= buying.unit_quantity %>">
                                            <button type="submit" class="delete-button">ลบ</button>
                                        </form>
                                    <% } %>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                <% }); %>
            </div>
        
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %>">ย้อนกลับ</a>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                        <a href="?page=<%= currentPage + 1 %>">ถัดไป</a>
                    <% } %>
                </div>
            <% } %>
    </div>
    </section>

    <!-- Link JS -->
    <script src="../js/index.js"></script>
    <script src="../js/buying.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Count the occurrences of each product name
            const productCount = {};
            document.querySelectorAll('.product-name').forEach(function(element) {
                const productName = element.textContent.trim();
                if (!productCount[productName]) {
                    productCount[productName] = 0;
                }
                productCount[productName]++;
            });
    
            // Function to update the visibility of items based on the checkbox states
            function updateVisibility() {
                const showZeroQuantity = document.getElementById('showZeroQuantity').checked;
                const showDuplicates = document.getElementById('showDuplicates').checked;
    
                document.querySelectorAll('.buying-item').forEach(function(item) {
                    const productName = item.querySelector('.product-name').textContent.trim();
                    const unitQuantity = parseInt(item.querySelector('input[name="unit_quantity"]').value, 10);
                    const deleteButton = item.querySelector('.delete-button');
    
                    // Enable delete button if there are at least 2 occurrences or unit quantity is 0
                    if (productCount[productName] >= 2 || unitQuantity === 0) {
                        deleteButton.disabled = false;
                        deleteButton.style.backgroundColor = '';
                    } else {
                        deleteButton.disabled = true;
                        deleteButton.style.backgroundColor = 'gray';
                    }
    
                    // Show or hide the item based on the checkbox states
                    if (showZeroQuantity && unitQuantity === 0) {
                        item.style.display = '';
                    } else if (showDuplicates && productCount[productName] >= 2) {
                        item.style.display = '';
                    } else if (!showZeroQuantity && !showDuplicates) {
                        item.style.display = '';
                    } else {
                        item.style.display = 'none';
                    }
                });
            }
    
            // Initial update
            updateVisibility();
    
            // Add event listeners to the checkboxes
            document.getElementById('showZeroQuantity').addEventListener('change', updateVisibility);
            document.getElementById('showDuplicates').addEventListener('change', updateVisibility);
        });
    </script>
</body>

</html>