    <script>
        // Set the start time (example: when the page loads)
        const startTime = new Date();
        
        function updateTimer() {
            const now = new Date();
            const diff = now - startTime; // difference in milliseconds
        
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        
            // Format the time string
            const formattedTime = `${padZero(days)}d ${padZero(hours)}h ${padZero(minutes)}m`;
        
            // Update the timer element
            document.getElementById('timer').children[0].textContent = formattedTime;
        
            // Call updateTimer every minute
            setTimeout(updateTimer, 60000);
        }
        
        // Helper function to pad numbers with leading zeros
        function padZero(num) {
            return num.toString().padStart(2, '0');
        }
        
        // Initialize the timer
        updateTimer();
        </script>
