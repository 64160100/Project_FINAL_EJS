    <!-- Link JS -->
    <script src="../js/index.js"></script>

    <script>
        const itemsPerPage = 10;
        let currentPage = 1;
        const menuItems = document.querySelectorAll('.menu-item');
    
        function showPage(page) {
            const start = (page - 1) * itemsPerPage;
            const end = start + itemsPerPage;
    
            menuItems.forEach((item, index) => {
                if (index >= start && index < end) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
    
            document.getElementById('pageInfo').textContent = `หน้าที่ ${page}`;
            document.getElementById('prevPage').disabled = page === 1;
            document.getElementById('nextPage').disabled = end >= menuItems.length;
        }
    
        document.getElementById('prevPage').addEventListener('click', () => {
            if (currentPage > 1) {
                currentPage--;
                showPage(currentPage);
            }
        });
    
        document.getElementById('nextPage').addEventListener('click', () => {
            if (currentPage * itemsPerPage < menuItems.length) {
                currentPage++;
                showPage(currentPage);
            }
        });
    
        document.getElementById('searchBox').addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();
            let filteredCount = 0;
    
            menuItems.forEach(item => {
                const menuName = item.querySelector('.product-name').textContent.toLowerCase();
                if (menuName.includes(searchValue)) {
                    item.style.display = '';
                    filteredCount++;
                } else {
                    item.style.display = 'none';
                }
            });
    
            // Update pagination based on filtered results
            const totalPages = Math.ceil(filteredCount / itemsPerPage);
            currentPage = 1;
            showPage(currentPage);
            document.getElementById('nextPage').disabled = totalPages <= 1;
        });
    
        // Initial display
        showPage(currentPage);
    </script>

    <script>
        document.getElementById('searchBox').addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();
            const employeeContents = document.querySelectorAll('.menu-item');

            employeeContents.forEach(content => {
                const employeeName = content.querySelector('.product-name').textContent.toLowerCase();
                if (employeeName.includes(searchValue)) {
                    content.style.display = '';
                } else {
                    content.style.display = 'none';
                }
            });
        });
    </script>

    <script>
        function updateStatus(id_menu, newStatus) {
            fetch(`/update_menu_status/${id_menu}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status: newStatus })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload(); // Reload the page to reflect the changes
                } else {
                    alert('Error updating status');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error updating status');
            });
        }
        </script>
