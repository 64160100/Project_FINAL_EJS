            </li>

            <!-- -------- Non Dropdown List Item ------- -->
            <li class="dropdown">
                <div class="title">
                    <a href="/buying" class="link">
                        <i class='bx bx-cart-download'></i>
                        <span class="name">รายการจัดซื้อและคงคลัง</span>
                    </a>
                    <i class='bx bxs-chevron-down'></i>
                </div>
                <div class="submenu">
                    <a href="/buying" class="link submenu-title">รายการจัดซื้อและคงคลัง</a>
                    <a href="/buying" class="link">รายการจัดซื้อ</a>
                    <a href="#" class="link">คงคลัง</a>
                    <a href="#" class="link">ตั้งค่าประเภท</a>
                    <a href="#" class="link">ตั้งค่าปริมาณ</a>
                </div>
            </li>

            <!-- -------- Non Dropdown List Item ------- -->
            <li>
                <div class="title">
                    <a href="/promotion" class="link">
                        <i class='bx bxs-dollar-circle'></i>
                        <span class="name">โปรโมชั่น</span>
                    </a>
                    <!-- <i class='bx bxs-chevron-down'></i> -->
                </div>
                <div class="submenu">
                    <a href="/promotion" class="link submenu-title">โปรโมชั่น</a>
                    <!-- submenu links here  -->
                </div>
            </li>
        </ul>
    </div>

    <!-- ============= Home Section =============== -->
    <section class="home">
        <div class="nav">
            <div class="toggle-sidebar">
                <i class='bx bx-menu'></i>
            </div>
            <nav>
                <div class="nav-content">
                    <div class="profile-details">
                        <img src="../img/chef.png" alt="" class="profile-image">
                        <span class="user-id">ID1234</span>
                    </div>
                    <a href="/login" class="auth-link">เข้าสู่ระบบ</a>
                </div>
            </nav>
        </div>

        <!-- ============= Top Dashboard =============== -->

        <div class="topic">
            เมนูอาหารและบริการ
            <div class="search-add-container">
                <input type="text" id="searchBox" placeholder="ค้นหาสิทธิ์ผู้ใช้งาน..." />
                <button onclick="window.location.href='/add_menu'" class="add-menu-button">สร้างสินค้า</button>
            </div>
        </div>

        <!-- ============= Center Dashboard =============== -->

        <div class="centered-content">
            <div class="menu-container">
                <div class="menu-header">
                    <ul class="menu-details">
                        <li>ชื่อสินค้า</li>
                        <li>รหัสสินค้า</li>
                        <li>ประเภทสินค้า</li>
                        <li>หมวดหมู่</li>
                        <li>ราคา</li>
                        <li>หน่วยการใช้</li>
                        <li>คงเหลือ</li>
                        <li>สถานะ</li>
                        <li>จัดการ</li>
                    </ul>
                </div>
                <hr class="underline">
                <% menu.forEach(function(menu) { %>
                    <div class="menu-item">
                        <ul class="menu-detail">
                            <li class="menu-item-inline" style="background-color: #f0f0f0; padding: 10px; border-radius: 5px;">
                                <!-- <img src="../img/<%= menu.menu_picture %>" title="" alt=""> -->
                                <img src="../img/<%= menu.menu_picture %>" title="" alt="" class="small-image">
                                <span class="product-name"><%= menu.name_product %></span>
                            </li>
                            <li>
                                <%= menu.id_menu %>
                            </li>
                            <li>
                                <%= menu.menu_category %>
                            </li>
                            <li>
                                <%= menu.menu_type %>
                            </li>
                            <li>
                                <%= menu.price %>
                            </li>
                            <li>
                                <%= menu.menu_unit %>
                            </li>
                            <li>
                                <%= menu.remain %>
                            </li>
                            <li>
                                <% if (menu.status === 'ON') { %>
                                    <button class="btn btn-success">ON</button>
                                <% } else if (menu.status === 'OFF') { %>
                                    <button class="btn btn-danger">OFF</button>
                                <% } %>
                            </li>
                            <li class="menu-action">
                                <button onclick="location.href='/view_menu/<%= menu.id_menu %>'" class="view-button">ดูข้อมูล</button>
                                <form action="/delete_menu/<%= menu.id_menu %>" method="post" style="display: inline;">
                                    <button type="submit" class="delete-button">ลบ</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Link JS -->
    <script src="../js/index.js"></script>
</body>