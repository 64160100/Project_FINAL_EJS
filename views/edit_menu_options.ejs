    <script>
        function updateCategoryNames(oldName, newName) {
            document.querySelectorAll(`tr[data-category="${oldName}"]`).forEach(row => {
                row.dataset.category = newName;
                row.querySelectorAll('input[name="name_options[]"]').forEach(input => {
                    input.value = newName;
                });
            });
        }
    </script>

    <script>
        function validateForm() {
            const categories = document.querySelectorAll('.category-row');
            for (let category of categories) {
                const ingredients = category.querySelectorAll('select[name="name_ingredient_menu_options[]"]');
                const ingredientNames = new Set();
                for (let ingredient of ingredients) {
                    if (ingredientNames.has(ingredient.value)) {
                        alert('วัตถุดิบในหมวดหมู่เดียวกันต้องไม่ซ้ำกัน');
                        return false;
                    }
                    ingredientNames.add(ingredient.value);
                }
            }
            return true;
        }
    
        function editOption(id, name, price, ingredient, quantity, unit) {
            document.querySelector('input[name="menuOptionsId"]').value = id;
            document.querySelector('input[name="name_options"]').value = name;
            document.querySelector('input[name="price"]').value = price;
            document.querySelector('select[name="name_ingredient_menu_options"]').value = ingredient;
            document.querySelector('input[name="unit_quantity_menu_options"]').value = quantity;
            document.querySelector('input[name="unit_id_menu_options"]').value = unit;
            togglePopup();
        }
    
        function deleteOption(id) {
            if (confirm('คุณแน่ใจหรือไม่ว่าต้องการลบหมวดหมู่นี้?')) {
                const form = document.createElement('form');
                form.method = 'post';
                form.action = '/delete_menu_options/' + id;
                document.body.appendChild(form);
                form.submit();
            }
        }
    
        document.addEventListener('DOMContentLoaded', function () {
            const categoryRows = document.querySelectorAll('.category-row');
    
            function updateSelectOptions(categoryRow) {
                const category = categoryRow.getAttribute('data-category');
                const ingredientSelects = document.querySelectorAll(`tr[data-category="${category}"] select[name="name_ingredient_menu_options[]"]`);
                const selectedIngredients = Array.from(ingredientSelects).map(select => select.value).filter(value => value);
    
                ingredientSelects.forEach(select => {
                    const currentValue = select.value;
                    const options = Array.from(select.options);
    
                    options.forEach(option => {
                        if (selectedIngredients.includes(option.value) && option.value !== currentValue) {
                            option.style.display = 'none';
                        } else {
                            option.style.display = '';
                        }
                    });
                });
            }
    
            categoryRows.forEach(categoryRow => {
                const ingredientSelects = categoryRow.querySelectorAll('select[name="name_ingredient_menu_options[]"]');
                ingredientSelects.forEach(select => {
                    select.addEventListener('change', () => updateSelectOptions(categoryRow));
                });
                updateSelectOptions(categoryRow);
            });
        });
    </script>
    
    <script>
        var modal = document.getElementById("myModal");
        var btn = document.getElementById("myBtn");
        var span = document.getElementsByClassName("close")[0];
        var menuId = "<%= menuId %>"; // Assuming you have the menuId available in your template

        // Function to open the modal
        btn.onclick = function () {
            modal.style.display = "block";
        };

        // Function to close the modal and redirect
        function closeModalAndRedirect() {
            modal.style.display = "none";
            window.location.href = "/edit_menu/" + menuId; // Redirect immediately after closing
        }

        // Attach closeModalAndRedirect to the close button
        span.onclick = closeModalAndRedirect;

        // Close the modal and redirect when clicking outside of the modal
        window.onclick = function (event) {
            if (event.target == modal) {
                closeModalAndRedirect();
            }
        };

        // Simplified function to close the modal and redirect, ensuring a single action
        function togglePopup() {
            closeModalAndRedirect(); // Use the existing function for consistency
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Modal form elements
            const nameIngredientSelect = document.getElementById('name_ingredient_menu_options');
            const quantityInput = document.getElementById('unit_quantity_menu_options');
            const settingUnitInput = document.getElementById('unit_id_menu_options');
            const fieldsContainer = document.getElementById('fieldsContainer');

            function updateSelectOptions() {
                const selectedIngredients = Array.from(fieldsContainer.querySelectorAll('select[name="name_ingredient_menu_options"]'))
                    .map(select => select.value)
                    .filter(value => value);

                const allOptions = Array.from(document.querySelectorAll('select[name="name_ingredient_menu_options"] option'));

                allOptions.forEach(option => {
                    if (selectedIngredients.includes(option.value)) {
                        option.style.display = 'none';
                    } else {
                        option.style.display = '';
                    }
                });

                // Check if there are any available options left
                const availableOptions = allOptions.filter(option => option.style.display !== 'none' && option.value !== '');
                const addButton = fieldsContainer.querySelector('.addIngredient');

                if (availableOptions.length === 0) {
                    addButton.innerHTML = "<i class='bx bx-error' style='font-size: 24px;'></i>";
                    addButton.style.backgroundColor = 'yellow';
                    addButton.style.color = 'gray';
                    addButton.disabled = true;
                } else {
                    addButton.innerHTML = "<i class='bx bx-plus-medical'></i>";
                    addButton.style.backgroundColor = '';
                    addButton.style.color = 'white';
                    addButton.disabled = false;
                }
            }

            // Event listener for modal form ingredient selection
            nameIngredientSelect.addEventListener('change', function () {
                const selectedOption = this.options[this.selectedIndex];
                const quantity = selectedOption.getAttribute('data-quantity');
                const unit = selectedOption.getAttribute('data-unit');

                quantityInput.value = quantity;
                settingUnitInput.value = unit;
            });

            // Event listener for add/remove ingredient buttons
            document.addEventListener('click', function (event) {
                const target = event.target.closest('.addIngredient, .removeIngredient');
                if (target) {
                    if (target.classList.contains('addIngredient')) {
                        addIngredientHandler(target);
                    } else if (target.classList.contains('removeIngredient')) {
                        removeIngredientHandler(target);
                    }
                }
            });

            function addIngredientHandler(button) {
                const currentRow = button.closest('.custom-form-row');
                const nameIngredientSelect = currentRow.querySelector('select[name="name_ingredient_menu_options"]');
                const nameIngredient = nameIngredientSelect.value;
                const quantity = currentRow.querySelector('input[name="unit_quantity_menu_options"]').value;
                const settingUnit = currentRow.querySelector('input[name="unit_id_menu_options"]').value;

                if (!nameIngredient) {
                    alert('กรุณาเลือกชื่อวัตถุดิบ');
                    nameIngredientSelect.focus();
                    return;
                }

                if (!quantity) {
                    alert('กรุณากรอกปริมาณ');
                    return;
                }

                if (!settingUnit) {
                    alert('กรุณาเลือกหน่วยการใช้');
                    return;
                }

                // Change the icon of the current button to a delete icon
                button.innerHTML = "<i class='bx bx-minus'></i>";
                button.classList.replace('addIngredient', 'removeIngredient');
                button.classList.add('removeIngredient');

                // Create a new form row
                const newRow = document.createElement('div');
                newRow.className = 'custom-form-row';

                // Create new input fields
                newRow.innerHTML = `
            <div class="custom-form-container">
                <label for="name_ingredient_menu_options">ชื่อวัตถุดิบ</label>
                <select name="name_ingredient_menu_options" class="custom-select" required aria-label="ชื่อวัตถุดิบ">
                    <option value="" disabled selected>กรุณาเลือกวัตถุดิบ</option>
                    <% menuFormbuying.forEach(item => { %>
                        <option value="<%= item.name_product %>" data-quantity="<%= item.unit_quantity %>" data-unit="<%= item.setting_unit_id %>">
                            <%= item.name_product %>
                        </option>
                    <% }); %>
                </select>
            </div>
            <div class="custom-form-container">
                <label for="unit_quantity_menu_options">ปริมาณ</label>
                <input type="number" name="unit_quantity_menu_options" class="custom-input" required aria-label="ปริมาณ">
            </div>
            <div class="custom-form-container">
                <label for="unit_id_menu_options">หน่วยการใช้</label>
                <input type="text" name="unit_id_menu_options" class="custom-input" required aria-label="หน่วยการใช้">
            </div>
            <div class="custom-form-container">
                <button type="button" class="addIngredient" aria-label="เพิ่มวัตถุดิบ">
                    <i class='bx bx-plus-medical'></i>
                </button>
            </div>
        `;

                // Append the new row to the appropriate fields container
                const containerId = button.closest('#modalFieldsContainer') ? 'modalFieldsContainer' : 'fieldsContainer';
                document.getElementById(containerId).appendChild(newRow);

                // Add event listener to the new name_ingredient select element
                newRow.querySelector('select[name="name_ingredient_menu_options"]').addEventListener('change', function () {
                    const selectedOption = this.options[this.selectedIndex];
                    const quantity = selectedOption.getAttribute('data-quantity');
                    const unit = selectedOption.getAttribute('data-unit');

                    newRow.querySelector('input[name="unit_quantity_menu_options"]').value = quantity;
                    newRow.querySelector('input[name="unit_id_menu_options"]').value = unit;

                    updateSelectOptions();
                });

                updateSelectOptions();
            }

            function removeIngredientHandler(button) {
                const rowToRemove = button.closest('.custom-form-row');
                rowToRemove.remove();
                updateSelectOptions();
            }

            updateSelectOptions();
        });
    </script>
</body>