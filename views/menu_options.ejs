    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const nameOptionsInput = document.getElementById('name_options');
            const nameOptionsFeedback = document.getElementById('name_options_feedback');

            nameOptionsInput.addEventListener('input', () => {
                if (nameOptionsInput.value.trim() === '') {
                    nameOptionsFeedback.textContent = 'กรุณากรอกชื่อหมวดหมู่เพิ่มเติม';
                } else {
                    nameOptionsFeedback.textContent = '';
                }
            });

            // Optional: Prevent form submission if the input is invalid
            const form = nameOptionsInput.closest('form');
            form.addEventListener('submit', (event) => {
                if (nameOptionsInput.value.trim() === '') {
                    event.preventDefault();
                    nameOptionsFeedback.textContent = 'กรุณากรอกชื่อหมวดหมู่เพิ่มเติม';
                }
            });
        });
    </script>

    <script>
        var modal = document.getElementById("myModal");
        var btn = document.getElementById("myBtn");
        var span = document.getElementsByClassName("close")[0];
        var menuId = "<%= menuId %>"; // Assuming you have the menuId available in your template

        // Function to open the modal
        btn.onclick = function () {
            modal.style.display = "block";
        };

        // Function to close the modal and redirect
        function closeModalAndRedirect() {
            modal.style.display = "none";
            window.location.href = "/edit_menu/" + menuId; // Redirect immediately after closing
        }

        // Attach closeModalAndRedirect to the close button
        span.onclick = closeModalAndRedirect;

        // Close the modal and redirect when clicking outside of the modal
        window.onclick = function (event) {
            if (event.target == modal) {
                closeModalAndRedirect();
            }
        };

        // Simplified function to close the modal and redirect, ensuring a single action
        function togglePopup() {
            closeModalAndRedirect(); // Use the existing function for consistency
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fieldsContainer = document.getElementById('modalFieldsContainer');

            function updateSelectOptions() {
                const selectedIngredients = Array.from(fieldsContainer.querySelectorAll('select[name="name_ingredient_menu_options"]'))
                    .map(select => select.value)
                    .filter(value => value);

                const allOptions = Array.from(document.querySelectorAll('select[name="name_ingredient_menu_options"] option'));

                allOptions.forEach(option => {
                    if (selectedIngredients.includes(option.value)) {
                        option.style.display = 'none';
                    } else {
                        option.style.display = '';
                    }
                });

                // Check if there are any available options left
                const availableOptions = allOptions.filter(option => option.style.display !== 'none' && option.value !== '');
                const addButton = fieldsContainer.querySelector('.addIngredient');

                if (availableOptions.length === 0) {
                    addButton.innerHTML = "<i class='bx bx-error' style='font-size: 24px;'></i>";
                    addButton.style.backgroundColor = 'yellow';
                    addButton.style.color = 'gray';
                    addButton.disabled = true;
                } else {
                    addButton.innerHTML = "<i class='bx bx-plus-medical'></i>";
                    addButton.style.backgroundColor = '';
                    addButton.style.color = 'white';
                    addButton.disabled = false;
                }
            }

            fieldsContainer.addEventListener('change', function (event) {
                if (event.target.name === 'name_ingredient_menu_options') {
                    const selectedOption = event.target.options[event.target.selectedIndex];
                    const quantity = selectedOption.getAttribute('data-quantity');
                    const unit = selectedOption.getAttribute('data-unit');

                    const currentRow = event.target.closest('.custom-form-row');
                    currentRow.querySelector('input[name="unit_quantity_menu_options"]').value = quantity;
                    currentRow.querySelector('input[name="unit_id_menu_options"]').value = unit;

                    updateSelectOptions();
                }
            });

            document.addEventListener('click', function (event) {
                const target = event.target.closest('.addIngredient, .removeIngredient');
                if (target) {
                    if (target.classList.contains('addIngredient')) {
                        addIngredientHandler(target);
                    } else if (target.classList.contains('removeIngredient')) {
                        removeIngredientHandler(target);
                    }
                }
            });

            function addIngredientHandler(button) {
                const currentRow = button.closest('.custom-form-row');
                const nameIngredientSelect = currentRow.querySelector('select[name="name_ingredient_menu_options"]');
                const nameIngredient = nameIngredientSelect.value;
                const quantity = currentRow.querySelector('input[name="unit_quantity_menu_options"]').value;
                const settingUnit = currentRow.querySelector('input[name="unit_id_menu_options"]').value;

                if (!nameIngredient) {
                    alert('กรุณาเลือกชื่อวัตถุดิบ');
                    nameIngredientSelect.focus();
                    return;
                }

                if (!quantity) {
                    alert('กรุณากรอกปริมาณ');
                    return;
                }

                if (!settingUnit) {
                    alert('กรุณาเลือกหน่วยการใช้');
                    return;
                }

                // Change the icon of the current button to a delete icon
                button.innerHTML = "<i class='bx bx-minus'></i>";
                button.classList.replace('addIngredient', 'removeIngredient');

                // Create a new form row
                const newRow = document.createElement('div');
                newRow.className = 'custom-form-row';

                // Create new input fields
                newRow.innerHTML = `
            <div class="custom-form-container">
                <label for="name_ingredient_menu_options">ชื่อวัตถุดิบ</label>
                <select name="name_ingredient_menu_options" required aria-label="ชื่อวัตถุดิบ">
                    <option value="" disabled selected>กรุณาเลือกวัตถุดิบ</option>
                    <% menuFormbuying.forEach(item => { %>
                        <option value="<%= item.name_product %>" data-quantity="<%= item.unit_quantity %>" data-unit="<%= item.setting_unit_id %>">
                            <%= item.name_product %>
                        </option>
                    <% }); %>
                </select>
            </div>
            <div class="custom-form-container">
                <label for="unit_quantity_menu_options">ปริมาณวัตถุดิบ</label>
                <input type="number" name="unit_quantity_menu_options" required aria-label="ปริมาณวัตถุดิบ">
            </div>
            <div class="custom-form-container">
                <label for="unit_id_menu_options">หน่วยวัตถุดิบ</label>
                <input type="text" name="unit_id_menu_options" required aria-label="หน่วยวัตถุดิบ">
            </div>
            <div class="custom-form-container">
                <button type="button" class="addIngredient" aria-label="เพิ่มวัตถุดิบ">
                    <i class='bx bx-plus-medical'></i>
                </button>
            </div>
        `;

                // Append the new row to the fields container
                fieldsContainer.appendChild(newRow);

                // Add event listener to the new name_ingredient_menu_options select element
                newRow.querySelector('select[name="name_ingredient_menu_options"]').addEventListener('change', function () {
                    const selectedOption = this.options[this.selectedIndex];
                    const quantity = selectedOption.getAttribute('data-quantity');
                    const unit = selectedOption.getAttribute('data-unit');

                    newRow.querySelector('input[name="unit_quantity_menu_options"]').value = quantity;
                    newRow.querySelector('input[name="unit_id_menu_options"]').value = unit;

                    updateSelectOptions();
                });

                updateSelectOptions();
            }

            function removeIngredientHandler(button) {
                const rowToRemove = button.closest('.custom-form-row');
                rowToRemove.remove();
                updateSelectOptions();
            }

            updateSelectOptions();
        });
    </script>
