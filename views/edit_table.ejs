<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS</title>

    <!-- Box Icons  -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <!-- Styles  -->
    <link rel="shortcut icon" href="img/kxp_fav.png" type="image/x-icon">
    <link rel="stylesheet" href="../css/index.css">
    <link rel="stylesheet" href="../css/table_edit.css">
</head>

<body>
    <div class="sidebar close">
        <!-- ========== Logo ============  -->
        <a href="#" class="logo-box">
            <i class='bx bx-food-menu'></i>
            <div class="logo-name">POS</div>
        </a>

        <!-- ========== List ============  -->

        <ul class="sidebar-list">

            <!-- -------- Non Dropdown List Item ------- -->
            <li>
                <div class="title">
                    <a href="/" class="link">
                        <i class='bx bx-home'></i>
                        <span class="name">หน้าหลัก</span>
                    </a>
                    <!-- <i class='bx bxs-chevron-down'></i> -->
                </div>
                <div class="submenu">
                    <a href="/" class="link submenu-title">หน้าหลัก</a>
                    <!-- submenu links here  -->
                </div>
            </li>

            <!-- -------- Non Dropdown List Item ------- -->
            <% if (permissions && permissions.dashboard.dashboard_read==='Y' ) { %>
                <li>
                    <div class="title">
                        <a href="/dashboard" class="link">
                            <i class='bx bx-grid-alt'></i>
                            <span class="name">แดชบอร์ด</span>
                        </a>
                        <!-- <i class='bx bxs-chevron-down'></i> -->
                    </div>
                    <div class="submenu">
                        <a href="/dashboard" class="link submenu-title">แดชบอร์ด</a>
                        <!-- submenu links here  -->
                    </div>
                </li>
                <% } %>


            <!-- -------- Dropdown List Item ------- -->
            <% if (permissions && permissions.employee.employee_read==='Y' ) { %>
                <li class="dropdown">
                    <div class="title">
                        <a href="/employee" class="link">
                            <i class='bx bx-collection'></i>
                            <span class="name">ข้อมูลพนักงาน</span>
                        </a>
                        <i class='bx bxs-chevron-down'></i>
                    </div>
                    <div class="submenu">
                        <a href="/employee" class="link submenu-title">ข้อมูลพนักงาน</a>
                        <a href="/employee" class="link">พนักงาน</a>
                        <a href="/user" class="link">ผู้ใช้งาน</a>
                        <a href="/permission" class="link">สิทธิ์ผู้ใช้งาน</a>
                    </div>
                </li>
                <% } %>

            <!-- -------- Dropdown List Item ------- -->
            <% if (permissions && permissions.menu.menu_read==='Y' ) { %>
                <li class="dropdown">
                    <div class="title">
                        <a href="/menu" class="link">
                            <i class='bx bxs-food-menu'></i>
                            <span class="name">เมนูอาหารและบริการ</span>
                        </a>
                        <i class='bx bxs-chevron-down'></i>
                    </div>
                    <div class="submenu">
                        <a href="/menu" class="link submenu-title">เมนูอาหารและบริการ</a>
                        <a href="/menu" class="link">เมนูอาหาร</a>
                        <a href="/setting_menu_category" class="link">ตั้งค่าหมวดหมู่</a>
                        <a href="/setting_menu_type" class="link">ตั้งค่าประเภท</a>
                        <a href="/setting_menu_unit" class="link">ตั้งค่าหน่วยสินค้า</a>
                    </div>
                </li>
                <% } %>

            <!-- -------- Non Dropdown List Item ------- -->
            <% if (permissions && permissions.table.table_read==='Y' ) { %>
                <li class="dropdown">
                    <div class="title">
                        <a href="table" class="link">
                            <i class='bx bx-table'></i>
                            <span class="name">โต๊ะอาหาร</span>
                        </a>
                        <i class='bx bxs-chevron-down'></i>
                    </div>
                    <div class="submenu">
                        <a href="/table" class="link submenu-title">โต๊ะอาหาร</a>
                        <a href="/table" class="link">จัดโต๊ะอาหาร</a>
                        <a href="/view_bill" class="link">บิลอาหาร</a>
                    </div>
                </li>
                <% } %>

            <!-- -------- Non Dropdown List Item ------- -->
            <% if (permissions && permissions.buying.buying_read==='Y' ) { %>
                <li class="dropdown">
                    <div class="title">
                        <a href="/buying" class="link">
                            <i class='bx bx-cart-download'></i>
                            <span class="name">รายการจัดซื้อและคงคลัง</span>
                        </a>
                        <i class='bx bxs-chevron-down'></i>
                    </div>
                    <div class="submenu">
                        <a href="/buying" class="link submenu-title">รายการจัดซื้อและคงคลัง</a>
                        <a href="/buying" class="link">รายการจัดซื้อ</a>
                        <a href="/warehouse" class="link">คงคลัง</a>
                        <a href="/setting_type" class="link">ตั้งค่าประเภท</a>
                        <a href="/setting_unit" class="link">ตั้งค่าปริมาณ</a>
                    </div>
                </li>    
                <% } %>

            <!-- -------- Non Dropdown List Item ------- -->
            <% if (permissions && permissions.promotion.promotion_read==='Y' ) {
                %>
                <li>
                    <div class="title">
                        <a href="/promotion" class="link">
                            <i class='bx bxs-dollar-circle'></i>
                            <span class="name">โปรโมชั่น</span>
                        </a>
                        <!-- <i class='bx bxs-chevron-down'></i> -->
                    </div>
                    <div class="submenu">
                        <a href="/promotion" class="link submenu-title">โปรโมชั่น</a>
                        <!-- submenu links here  -->
                    </div>
                </li>
            </ul>
                <% } %>
        </ul>
    </div>

    <!-- ============= Home Section =============== -->
    <section class="home">
        <div class="nav">
            <div class="toggle-sidebar">
                <i class='bx bx-menu'></i>
            </div>
            <nav>
                <div class="nav-content">
                    <div class="profile-details">
                        <% if (user) { %>
                            <img src="../img/chef.png" alt="" class="profile-image">
                            <span class="user-id">ID: <%= user.tbl_employees %></span>
                        </div>
                        <a href="/logout" class="auth-link">Logout</a>
                        <% } else { %>
                            <a href="/login" class="auth-link">เข้าสู่ระบบ</a>
                        <% } %>
                </div>
            </nav>
        </div>

        <!-- ============= Top Dashboard =============== -->

        <div class="breadcrumbs">
            <a href="/"> หน้าหลัก</a> > <span>จัดโต๊ะอาหาร</span>
        </div>
        <div class="topic"><a href="javascript:history.back()" style="text-decoration: none;">
                <i class='bx bx-left-arrow-alt'></i></a> จัดโต๊ะอาหาร</div>

        <!-- ============= Center Dashboard =============== -->

        <div class="centered-content">
            <div class="zone-controls">
                <p class="zone-label">โซน : <span class="zone-id">
                        <%= zoneId %>
                    </span></p>

                <form action="/delete_zone/<%= zoneId %>" method="POST" class="inline-form"
                    onsubmit="return confirmDeleteZone()">
                    <button type="submit" class="btn <%= lockZone === 'Y' ? 'btn-danger' : 'btn-disabled' %>"
                        id="delete-zone-btn" <%=lockZone==='Y' ? '' : 'disabled' %>>ลบโซน</button>
                </form>

                <form id="toggle-lock-form" action="/toggle_lock/<%= zoneId %>" method="POST" class="inline-form">
                    <input type="hidden" name="lockZone" id="lockZoneInput" value="<%= lockZone === 'Y' ? 'N' : 'Y' %>">
                    <i class='<%= lockZone === "Y" ? "bx bx-lock-open-alt" : "bx bx-lock-alt" %>' id="lock-icon"
                        onclick="submitToggleLockForm()"></i>
                </form>
            </div>

            <% if (deleteZoneError) { %>
                <div class="alert alert-danger">
                    <%= deleteZoneError %>
                </div>
            <% } %>
        
            <% if (deleteTableError) { %>
                <div class="alert alert-danger">
                    <%= deleteTableError %>
                </div>
            <% } %>
        

            <% if (tables.length> 0) { %>
                <div class="table-container">
                    <% tables.forEach(function(table) { %>
                        <form action="/zone/<%= zoneId %>/table/<%= table.id_table %>/edit" method="POST"
                            class="table-edit-form">
                            <div class="table-box">
                                <label for="table-id-<%= table.id_table %>">โต๊ะที่</label>
                                <input type="text" id="table-id-<%= table.id_table %>" name="table_id"
                                    value="<%= table.id_table %>" readonly>
                        </form>
                        <span>
                            <form action="/delete_table/<%= table.id_table %>" method="post" style="display: inline;"
                                onsubmit="return confirmDelete()">
                                <input type="hidden" name="id_table" value="<%= table.id_table %>">
                                <input type="hidden" name="zoneId" value="<%= zoneId %>">
                                <button type="submit" class="delete-icon">✖</button>
                            </form>
                        </span>
                </div>
                <% }); %>
        </div>
        <% } %>


            <div class="new-table-container">
                <form action="/create_table/<%= zoneId %>" method="POST" class="new-table-form">
                    <div class="table-box">
                        <label for="new-table-id">สร้างโต๊ะใหม่</label>
                        <input type="text" id="new-table-id" name="table_id" placeholder="หมายเลขโต๊ะใหม่">
                        <% if (createTableError) { %>
                            <div class="alert alert-danger">
                                <%= createTableError %>
                            </div>
                        <% } %>
                                <button type="submit" class="btn btn-primary">สร้าง</button>
                </form>
            </div>

    </section>
    <!-- Link JS -->
    <script src="../js/index.js"></script>

    <script>
        function confirmDelete() {
            return confirm('ยืนยันการลบโต๊ะอาหาร');
        }
    </script>

    <script>
        function confirmDeleteZone() {
            return confirm('ยืนยันการลบโซน');
        }

        function submitToggleLockForm() {
            const lockIcon = document.getElementById('lock-icon');
            const lockZoneInput = document.getElementById('lockZoneInput');
            const form = document.getElementById('toggle-lock-form');
            const deleteButton = document.getElementById('delete-zone-btn');

            if (lockIcon.classList.contains('bx-lock-open-alt')) {
                if (confirm('ยืนยันการล็อค')) {
                    lockZoneInput.value = 'N';
                    deleteButton.disabled = true;
                    deleteButton.classList.remove('btn-danger');
                    deleteButton.classList.add('btn-disabled');
                } else {
                    return;
                }
            } else {
                if (confirm('ยืนยันการปลดล็อค')) {
                    lockZoneInput.value = 'Y';
                    deleteButton.disabled = false;
                    deleteButton.classList.remove('btn-disabled');
                    deleteButton.classList.add('btn-danger');
                } else {
                    return;
                }
            }
            form.submit();
        }
    </script>

    <script>
        function resetForm() {
            const forms = document.querySelectorAll('.table-edit-form');
            forms.forEach(form => form.reset());
        }
    </script>
</body>

</html>