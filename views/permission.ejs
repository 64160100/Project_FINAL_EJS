                        <% } %>
                </div>
            </nav>
        </div>

        <!-- ============= Top Dashboard =============== -->
         
        <div class="topic">
            สิทธิ์ผู้ใช้งาน
            <div class="search-add-container">
                <input type="text" id="searchBox" placeholder="ค้นหาสิทธิ์ผู้ใช้งาน..." />
                <% if (permissions.employee.employee_create === 'Y') { %>
                <button onclick="window.location.href='/add_permission'" class="add-permission-button">สร้างสิทธิ์ผู้ใช้งาน</button>
                <% } %>
            </div>
        </div>
        

        <!-- ============= Center Dashboard =============== -->
        <div class="centered-content">
            <div class="permission-container">
                <div class="permission-header">
                    <ul class="permission-details">
                        <li class="id-permission">รหัสสิทธิ์ผู้ใช้งาน</li>
                        <li class="name-permission">ชื่อสิทธิ์ผู้ใช้งาน</li>
                        <% if (permissions.employee.employee_view === 'Y' || permissions.employee.employee_delete === 'Y') { %>
                        <li class="action-permission">จัดการ</li>
                        <% } %>
                    </ul>
                </div>
                <hr class="underline">
                <% permission.forEach(function(permission) { %>
                    <div class="permission-content">
                        <ul class="permission-detail">
                            <li class="permission-id">
                                <%= permission.id %> 
                            </li>
                            <li class="permission-name">
                                <%= permission.name %>
                            </li>
                            <% if (permissions.employee.employee_view === 'Y' || permissions.employee.employee_delete === 'Y') { %>
                            <li class="permission-action">
                                <% if (permissions.employee.employee_view === 'Y') { %>
                                <button onclick="location.href='/view_permission/<%= permission.id %>'" class="view-button">ดูข้อมูล</button>
                                <% } %>

                                <% if (permissions.employee.employee_delete === 'Y') { %>
                                    <% if (!permission.isInUse) { %>
                                        <form action="/delete_permission/<%= permission.id %>" method="post" style="display: inline;">
                                            <button type="submit" class="delete-button" onclick="return confirm('ยืนยันการลบสิทธิ์ผู้ใช้งาน');">ลบ</button>
                                        </form>
                                    <% } else { %>
                                        <button class="delete-button-disabled" title="ไม่สามารถลบได้เนื่องจากสิทธิ์นี้กำลังถูกใช้งาน" disabled>ลบ</button>
                                    <% } %>
                                <% } %>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                <% }); %>
                <div id="pagination">
                    <button id="prevPage" disabled>ก่อนหน้า</button>
                    <span id="pageInfo"></span>
                    <button id="nextPage">ถัดไป</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Link JS -->
    <script src="../js/index.js"></script>
    <script>
        const itemsPerPage = 10;
        let currentPage = 1;
        const permissionContents = document.querySelectorAll('.permission-content');

        function showPage(page) {
            const start = (page - 1) * itemsPerPage;
            const end = start + itemsPerPage;

            permissionContents.forEach((content, index) => {
                if (index >= start && index < end) {
                    content.style.display = '';
                } else {
                    content.style.display = 'none';
                }
            });

            document.getElementById('pageInfo').textContent = `หน้าที่ ${page}`;
            document.getElementById('prevPage').disabled = page === 1;
            document.getElementById('nextPage').disabled = end >= permissionContents.length;
        }

        document.getElementById('prevPage').addEventListener('click', () => {
            if (currentPage > 1) {
                currentPage--;
                showPage(currentPage);
            }
        });

        document.getElementById('nextPage').addEventListener('click', () => {
            if (currentPage * itemsPerPage < permissionContents.length) {
                currentPage++;
                showPage(currentPage);
            }
        });

        document.getElementById('searchBox').addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();
            let filteredCount = 0;

            permissionContents.forEach(content => {
                const permissionId = content.querySelector('.permission-id').textContent.toLowerCase();
                const permissionName = content.querySelector('.permission-name').textContent.toLowerCase();
                if (permissionId.includes(searchValue) || permissionName.includes(searchValue)) {
                    content.style.display = '';
                    filteredCount++;
                } else {
                    content.style.display = 'none';
                }
            });

            // Update pagination based on filtered results
            const totalPages = Math.ceil(filteredCount / itemsPerPage);
            currentPage = 1;
            showPage(currentPage);
            document.getElementById('nextPage').disabled = totalPages <= 1;
        });

        // Initial display
        showPage(currentPage);
    </script>

    <script>
        document.getElementById('searchBox').addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();
            const employeeContents = document.querySelectorAll('.permission-content');

            employeeContents.forEach(content => {
                const employeeName = content.querySelector('.permission-name').textContent.toLowerCase();
                if (employeeName.includes(searchValue)) {
                    content.style.display = '';
                } else {
                    content.style.display = 'none';
                }
            });
        });
    </script>

</body>

